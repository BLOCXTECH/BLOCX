BLOCXBLS_RUNBENCH = runbench

runbench_SOURCES = \
	src/test-bench.cpp \
	src/test-utils.hpp

runbench_SOURCES += \
	$(RELIC_H) \
	$(BLOCXBLS_H)

runbench_CPPFLAGS = $(AM_CPPFLAGS) $(BLOCXBLS_INCLUDES) $(RELIC_INCLUDES)
runbench_CXXFLAGS = $(AM_CXXFLAGS)
runbench_LDFLAGS  = -static $(AM_LDFLAGS) $(LIBTOOL_APP_LDFLAGS) $(PTHREAD_FLAGS)

runbench_LDADD = $(LIBBLOCXBLS)

noinst_PROGRAMS += $(BLOCXBLS_RUNBENCH)
